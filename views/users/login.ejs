<% layout('layouts/boilerplate') %>


<div class="users-login__container d-flex justify-content-center align-items-center">
  <div class="row w-100">
    <div class="col-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow p-2">
        <div class="card-body">
          <!-- <h5 class="card-title mb-3 text-center">Login</h5> -->
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input
                  class="form-control"
                  type="text"
                  id="username"
                  placeholder="Username"
                  name="username"
                  required
                  autofocus
                />
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input
                  class="form-control"
                  type="text"
                  id="password"
                  placeholder="Password"
                  name="password"
                  required
                />
                <div class="valid-feedback">
                    Looks good!
                </div>
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn btn-dark">Login</button>
              </div>
              
        </form>
        </div>
        
      </div>
    </div>
  </div>
</div>
